<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiabilitiesTable"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD YOUR LIABILITIES"
                    android:textAlignment="center"
                    android:background="@color/componentsColor"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="10dp"/>


            </RelativeLayout>

            <!--        <RelativeLayout-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_margin="10dp">-->

            <!--            <Spinner-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:entries="@array/numbers"-->
            <!--                android:backgroundTint="#fff"/>-->
            <!--        </RelativeLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHORT TERM LIABILITIES"
                android:textColor="@color/componentsColor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >
                <CheckBox android:id="@+id/checkbox_creditCard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:onClick="onLiabilityCheckboxClicked"/>

                <TextView
                    android:id="@+id/creditcardOneAmountTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/componentsBackground"
                    android:layout_weight="1"
                    android:text="Credit Card 1"
                    android:layout_marginRight="2dp"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/creditcardOneAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:background="@color/componentsBackground"
                    android:textAlignment="center"
                    android:textColorHint="@color/componentsColor"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >
                <CheckBox android:id="@+id/checkbox_creditCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:onClick="onLiabilityCheckboxClicked"/>

                <TextView
                    android:id="@+id/creditcardTwoAmountTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/componentsBackground"
                    android:layout_weight="1"
                    android:text="Credit Card 2"
                    android:layout_marginRight="2dp"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/creditcardTwoAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:background="@color/componentsBackground"
                    android:textAlignment="center"
                    android:textColorHint="@color/componentsColor"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"/>

            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LONG TERM DEBTS"
                android:textColor="@color/componentsColor"
                android:layout_marginRight="2dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <CheckBox android:id="@+id/checkbox_mortgageOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:onClick="onLiabilityCheckboxClicked"/>

                <TextView
                    android:id="@+id/mortgageOneAmountTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/componentsBackground"
                    android:layout_weight="1"
                    android:text="Mortgage 1"
                    android:layout_marginRight="2dp"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/mortgageOneAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:background="@color/componentsBackground"
                    android:textAlignment="center"
                    android:textColorHint="@color/componentsColor"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <CheckBox android:id="@+id/checkbox_mortgageTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:onClick="onLiabilityCheckboxClicked"/>

                <TextView
                    android:id="@+id/mortgageTwoAmountTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/componentsBackground"
                    android:layout_weight="1"
                    android:text="Mortgage 2"
                    android:layout_marginRight="2dp"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/mortgageTwoAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:background="@color/componentsBackground"
                    android:textAlignment="center"
                    android:textColorHint="@color/componentsColor"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <CheckBox android:id="@+id/checkbox_LOC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:onClick="onLiabilityCheckboxClicked"/>

                <TextView
                    android:id="@+id/lineOfCreditAmountTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/componentsBackground"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:text="Line of Credit"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/lineOfCreditAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:background="@color/componentsBackground"
                    android:textAlignment="center"
                    android:textColorHint="@color/componentsColor"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <CheckBox android:id="@+id/checkbox_InvestmentLoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:onClick="onLiabilityCheckboxClicked"/>

                <TextView
                    android:id="@+id/investmentLoanAmountTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/componentsBackground"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:text="Investment Loan"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/investmentLoanAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:background="@color/componentsBackground"
                    android:textAlignment="center"
                    android:textColorHint="@color/componentsColor"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <CheckBox android:id="@+id/checkbox_studentLoanAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:onClick="onLiabilityCheckboxClicked"/>

                <TextView
                    android:id="@+id/studentLoanAmountTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/componentsBackground"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:text="Student Loan"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/studentLoanAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:background="@color/componentsBackground"
                    android:textAlignment="center"
                    android:textColorHint="@color/componentsColor"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <CheckBox android:id="@+id/checkbox_carLoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:onClick="onLiabilityCheckboxClicked"/>

                <TextView
                    android:id="@+id/carLoanAmountTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/componentsBackground"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:text="Car Loan"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/carLoanAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:background="@color/componentsBackground"
                    android:textAlignment="center"
                    android:textColorHint="@color/componentsColor"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <Button
                android:id="@+id/otherLiabilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OTHER"
                android:textSize="20sp"
                android:background="@color/componentsColor"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:textStyle="bold"
                />

        </LinearLayout>






    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>